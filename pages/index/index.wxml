<!-- 
   小程序中 用 rpx 为单位
   <view>  视图容器
   <icon>  图标文件
   <text>  文本文件
   <checkbox> 复选框
   <button>   按钮
   <radio>    单选框
   <image>    图片
   <input>    输入框
   <form>     表单
   <progress> 进度条
 -->
 
<view class="container">
  <form bindsubmit="submit">
    <view>
      <text>姓名：</text>
      <input style="text" placeholder='请输入姓名' name='name' value="张三" ></input>
    </view>
    <view>
      <text>性别：</text>
      <radio-group name="gender">
        <label><radio value = '1' checked="true"/>男</label>
        <label><radio value = '0' />女</label>
      </radio-group>
    </view>
    <view>
      <text>专业技能：</text>
      <checkbox-group name="skills">
        <label><checkbox value="html" checked="true" />html</label>
        <label><checkbox value="css"  checked="true" />css</label>
        <label><checkbox value="js"  />JavaScript</label>
        <label><checkbox value="ps"  />Photoshop</label>
      </checkbox-group>
    </view>
    <view>
      <text>你的意见：</text>
      <textarea name='opinion' value="默认值测试" />
    </view>
    <button form-type="submit">提交</button>
  </form>
</view>

