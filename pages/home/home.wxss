page {
  display: flex;
  flex-direction: column;
  height: 100%;
}

.result{
  flex: 1;
  background: #f3f6fe;
}

.btns{
  flex: 1;
  display: flex;
  flex-direction: column;
  font-size: 17pt;
  border-top: 1rpt solid #ccc;
  border-left: 1rpt solid #ccc;
}

.btns > view {
  flex: 1;
  display: flex;
}

.btns > view > view {
  flex-basis: 25%;
  border-right: 1rpt solid #ccc;
  border-bottom: 1rpt solid #ccc;
  box-sizing: border-box;
  display:flex;
  align-items: center;
  justify-content: center;
}

.btns > view:last-child > view:first-child{
  flex-basis: 50%;
}
/* 设置 0 占用两个空格的位置 */
.btns > view:first-child > view:first-child{
  color: #f00;
}

.btns > view >view:last-child {
  color: #fc8e00;
}

.bg{
  background: #eee; 
}

.result{
  flex: 1;
  background: #f3f6fe;
  position: relative;
}

.result-num{
  position: absolute;
  font-size: 26pt;
  bottom: 5vh;
  right: 3vw;
}

.result-op{
  font-size: 15pt;
  position: absolute;
  bottom: 1vh;
  right: 3vw;
}
